version: '2'

networks:
  {{ p.network }}:
  external:
      name: {{ p.network }}
services:
  {{ p.db.name }}:
    container_name: {{ p.db.name }}
    image: hyperledger/fabric-couchdb
    environment:
    - COUCHDB_USER={{ p.db.user }}
    - COUCHDB_PASSWORD={{ p.db.password }}
    volumes:{% for volume in p.db.volumes %}
    - {{ volume }}{% endfor %}
    ports:
    - "{{ p.db.port }}:{{ p.db.port }}"
    networks:
    - {{ p.network }}

  {{ p.name }}:
    container_name: {{ p.name }}
    image: hyperledger/fabric-peer
    environment:
    - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
    - CORE_VM_DOCKER_HOSTCONFIG_NETWORKMODE={{ p.network }}
    - CORE_LOGGING_LEVEL=INFO
    - CORE_PEER_TLS_ENABLED=true
    - CORE_PEER_GOSSIP_USELEADERELECTION=true
    - CORE_PEER_GOSSIP_ORGLEADER=false
    - CORE_PEER_PROFILE_ENABLED=true
    - CORE_PEER_TLS_CERT_FILE=/etc/hyperledger/fabric/tls/server.crt
    - CORE_PEER_TLS_KEY_FILE=/etc/hyperledger/fabric/tls/server.key
    - CORE_PEER_TLS_ROOTCERT_FILE=/etc/hyperledger/fabric/tls/ca.crt
    - CORE_PEER_ID={{ p.name }}
    - CORE_PEER_ADDRESS={{ p.name }}:{{ p.port0 }}
    - CORE_PEER_CHAINCODELISTENADDRESS=0.0.0.0:{{ p.port1 }}
    - CORE_PEER_GOSSIP_EXTERNALENDPOINT={{ p.name }}:{{ p.port0 }}
    - CORE_PEER_GOSSIP_BOOTSTRAP={{ p.name }}:{{ p.port0 }}
    - CORE_PEER_LOCALMSPID={{ p.mspid }}
    - CORE_LEDGER_STATE_STATEDATABASE=CouchDB
    - CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS={{ p.db.name }}:{{ p.db.port }}
    - CORE_LEDGER_STATE_COUCHDBCONFIG_USERNAME={{ p.db.user }}
    - CORE_LEDGER_STATE_COUCHDBCONFIG_PASSWORD={{ p.db.password }}
    working_dir: /opt/gopath/src/github.com/hyperledger/fabric/peer
    command: peer node start
    extra_hosts:{% for host in orderer_hosts %}
    - "{{ host }}"{% endfor %}{% for host in peer_hosts %}
    - "{{ host }}"{% endfor %}{% for host in couchdb_hosts %}
    - "{{ host }}"{% endfor %}
    volumes:{% for volume in p.volumes %}
    - "{{ volume }}"{% endfor %}
    ports:{% for port in p.ports %}
    - "{{ port }}"{% endfor %}
    networks:
    - {{ p.network }}

  cli:
    container_name: cli
    image: hyperledger/fabric-tools
    tty: true
    stdin_open: true
    environment:
    - GOPATH=/opt/gopath
    - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
    #- CORE_LOGGING_LEVEL=DEBUG
    - CORE_LOGGING_LEVEL=INFO
    - CORE_PEER_ID=cli
    - CORE_PEER_ADDRESS={{p.name}}:{{p.port0}}
    - CORE_PEER_LOCALMSPID={{p.mspid}}
    - CORE_PEER_TLS_ENABLED=true
    - CORE_PEER_TLS_CERT_FILE=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/{{p.domain}}/peers/{{p.name}}/tls/server.crt
    - CORE_PEER_TLS_KEY_FILE=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/{{p.domain}}/peers/{{p.name}}/tls/server.key
    - CORE_PEER_TLS_ROOTCERT_FILE=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/{{p.domain}}/peers/{{p.name}}/tls/ca.crt
    - CORE_PEER_MSPCONFIGPATH=/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/peerOrganizations/{{p.domain}}/users/Admin@{{p.domain}}/msp
    working_dir: /opt/gopath/src/github.com/hyperledger/fabric/peer
    command: /bin/bash
    volumes:
    - /var/run/:/host/var/run/
    - ./chaincode/:/opt/gopath/src/github.com/chaincode
    - ./crypto-config:/opt/gopath/src/github.com/hyperledger/fabric/peer/crypto/
    - ./scripts:/opt/gopath/src/github.com/hyperledger/fabric/peer/scripts/
    - ./channel-artifacts:/opt/gopath/src/github.com/hyperledger/fabric/peer/channel-artifacts
    extra_hosts:{% for host in orderer_hosts %}
    - "{{ host }}"{% endfor %}{% for host in peer_hosts %}
    - "{{ host }}"{% endfor %}{% for host in couchdb_hosts %}
    - "{{ host }}"{% endfor %}
    networks:
    - {{ p.network }}